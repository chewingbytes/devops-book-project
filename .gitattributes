# Normalize line endings
* text=auto eol=lf

# Handle specific text formats
*.js   text diff=javascript
*.ts   text diff=typescript
*.css  text diff=css
*.html text diff=html
*.json text diff=json
*.md   text diff=markdown

# Binary files (no diffs)
*.png  binary
*.jpg  binary
*.jpeg binary
*.gif  binary
*.svg  binary
*.ico  binary
*.pdf  binary
*.zip  binary
*.gz   binary

# Enforce LF for shell scripts
*.sh text eol=lf

# Treat configuration files as text
*.env text
*.yml text
*.yaml text

# Protect important files
.gitattributes merge=ours
.gitignore merge=ours
